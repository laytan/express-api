{
  "name": "express-api",
  "version": "0.0.1",
  "description": "Express api made to understand express folder structure",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix && npm run test",
    "build": "tsc",
    "dev": "nodemon .",
    "prestart": "npm run test",
    "start": "node -r ts-node/register ./src/index.ts",
    "test": "mocha --timeout 10000 --recursive --require ts-node/register test/**/*.ts",
    "watch": "mocha --timeout 10000 --recursive --watch --require ts-node/register test/**/*.ts"
  },
  "author": "@laytanl",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^6.1.3",
    "nodemon": "^1.18.11",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
