{
  "name": "express-api",
  "version": "0.0.1",
  "description": "Express api made to understand express folder structure",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix && npm run test",
    "build": "tsc",
    "dev": "nodemon .",
    "start": "node -r ts-node/register ./src/index.ts",
    "test": "mocha --timeout 10000 --recursive --require ts-node/register test/**/*.ts",
    "watch": "mocha --timeout 10000 --recursive --watch --watch-extensions ts --require ts-node/register test/**/*.ts"
  },
  "author": "@laytan",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.5",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.3.5",
    "sequelize-typescript": "^0.6.9"
  },
  "devDependencies": {
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.4",
    "@types/sequelize": "^4.27.47",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "inquirer": "^6.2.2",
    "mocha": "^6.1.3",
    "nodemon": "^1.18.11",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "typescript": "^3.4.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
